{% import '_includes/forms' as forms %}
<div id="newProject">
    <div class="btn" data-toggle>
        New Project
    </div>
    <form data-content class="ProjectForm">
        {{ csrfInput() }}
        {{ forms.textField({
            name: 'displayName',
            label: 'Display Name',
            required: true,
        }) }}

        {{ forms.selectField({
            name: 'serverId',
            label: 'Server',
            required: true,
            options: servers,
        }) }}

        {{ forms.textField({
            name: 'serverSrcPath',
            label: 'Server Source Path',
            required: true,
        }) }}

        {{ forms.selectField({
            name: 'backupServerId',
            label: 'Backup Server',
            required: true,
            options: servers,
        }) }}

        {{ forms.textField({
            name: 'backupServerPath',
            label: 'Backup Server Path',
            required: true,
        }) }}

        {% include "admin/_components/intervalPicker" with {
            name: 'backupFrequency',
            label: 'Backup Frequency',
            required: true,
            disabled: true,
        } only %}

        {{ forms.textField({
            name: 'keepRecords',
            label: 'Number of backups to keep',
            required: true,
        }) }}

        {{ forms.textField({
            name: 'email',
            label: 'Email',
            required: true
        }) }}

        <div class="btn submit" id="submit">Create</div>
    </form>
</div>